{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "rootDir": "../..",
    "baseUrl": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "paths": {
      "@core/*": ["../../core/*"],
      "@src/*": ["./src/*"],
      "@test/*": ["./test/*"],
      "@root/*": ["./*"]
    }
  },
  "exclude": ["node_modules/**", "**/*.spec.ts"]
}
